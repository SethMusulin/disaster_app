<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :source %><br>
    <%= f.text_field :source %>
  </div>
  <div class="field">
    <%= f.label :category %><br>
    <%= f.text_field :category %>
  </div>
  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_field :location %>
    <%= f.hidden_field :lat %>
    <%= f.hidden_field :lon %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<script>
  navigator.geolocation.getCurrentPosition(function(position) {
    document.querySelector('#item_lat').value = position.coords.latitude;
    document.querySelector('#item_lon').value = position.coords.longitude;
  });
</script>
